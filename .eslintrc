{
    "root": true,
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "env": {
        "node": true
    },
    "rules": {
        "valid-jsdoc": [2],
        "valid-typeof": [2],
        "strict": [0, "never"],
        "accessor-pairs": [2],
        "consistent-return": [2],
        "default-case": [2],
        "eqeqeq": [2, "allow-null"],
        "no-caller": [2],
        "no-else-return": [2],
        "no-eq-null": [2],
        "no-extend-native": [2],
        "no-extra-bind": [2],
        "no-new": [2],
        "no-self-compare": [2],
        "no-throw-literal": [2],
        "no-unused-expressions": [2],
        "no-useless-call": [2],
        "no-warning-comments": [1, {
            "terms": ["TODO", "FIXME"],
            "location": "start"
        }],
        "no-with": [2],
        "radix": [2],
        "wrap-iife": [2, "any"],
        "no-catch-shadow": [2],
        "no-shadow": [2],
        "no-mixed-requires": [2],
        "no-new-require": [2],
        "no-process-exit": [2],
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "camelcase": [2],
        "comma-spacing": [2],
        "eol-last": [2],
        "new-cap": [2],
        "newline-after-var": [2],
        "no-array-constructor": [2],
        "no-lonely-if": [2],
        "no-nested-ternary": [2],
        "no-unneeded-ternary": [2],
        "no-new-object": [2],
        "no-trailing-spaces": [2],
        "no-underscore-dangle": [0],
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2],
        "space-after-keywords": [2],
        "space-before-blocks": [2],
        "spaced-comment": [1],
        "arrow-spacing": [2],
        "constructor-super": [2],
        "no-var": [2],
        "object-shorthand": [2],
        "prefer-const": [2],
        "prefer-spread": [2],
        "max-len": [1, 80, 2],
        "no-bitwise": [2]
    }
}
